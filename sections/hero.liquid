<div class="hero__wrapper" style="background-image: url('{{ section.settings.background_image | img_url: "master" }}');">
  <div class="hero__container">
    <h1 class="hero__heading hero__heading--{{ section.settings.heading_colour }}">{{ section.settings.heading }}</h1>

    <a href="{{ section.settings.button_url }}" class="button button--{{ section.settings.button_colour }}">{{ section.settings.button_text }}</a>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "class": "hero",
  "tag": "section",

  "settings": [
    {
      "id": "background_image",
      "type": "image_picker",
      "label": "Background Image"
    },

    {
      "id": "heading",
      "type": "text",
      "label": "Heading",
      "default": "Real fiber. No B.S."
    },

    {
      "id": "heading_colour",
      "type": "select",
      "label": "Heading Color",
      "options": [
        {"value": "blue", "label": "Blue"},
        {"value": "green", "label": "Green"},
        {"value": "orange", "label": "Orange"},
        {"value": "purple", "label": "Purple"},
        {"value": "red", "label": "Red"}
      ]
    },

    {
      "id": "button_text",
      "type": "text",
      "label": "Button Text",
      "default": "Shop Flavors"
    },

    {
      "id": "button_colour",
      "type": "select",
      "label": "Button Color",
      "options": [
        {"value": "blue", "label": "Blue"},
        {"value": "green", "label": "Green"},
        {"value": "orange", "label": "Orange"},
        {"value": "purple", "label": "Purple"},
        {"value": "red", "label": "Red"}
      ]
    },

    {
      "id": "button_url",
      "type": "url",
      "label": "Button URL",
      "default": "/"
    }
  ],

  "presets": [
    {
      "category": "Modules",
      "name": "Hero",
      "settings": {
        "heading": "Real fiber. No B.S.",
        "button_text": "Shop Flavors",
        "button_url": ""
      }
    }
  ]
}
{% endschema %}
